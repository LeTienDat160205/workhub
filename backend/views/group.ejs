    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const socket = io(); // t·ª± ƒë·ªông k·∫øt n·ªëi ƒë·∫øn backend

        const chatId = "<%= chatId %>";
        const userId = "<%= user.id %>";
