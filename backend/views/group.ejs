        document.addEventListener("keydown", (e) => {
          if (e.key === "Escape" && logoutConfirm.classList.contains("active")) {
            logoutConfirm.classList.remove("active");
            logoutConfirm.setAttribute("aria-hidden", "true");
          }
        });
      }
    </script>

