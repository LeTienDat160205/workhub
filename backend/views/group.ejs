                  <div class="popup-content" role="dialog" aria-modal="true" aria-labelledby="create-task-title">
                    <button class="close-btn" id="closeTaskPopup" aria-label="Đóng">
                      &times;
                    </button>
                    <div class="popup-inner-content" style="flex-direction: column; width: 100%">
                      <div>
                        <div id="create-task-title" class="popup-title">
                          Tạo công việc
                        </div>
                        <form id="taskForm" action="/tasks" method="POST"
                          style="display: flex; flex-direction: column; gap: 18px; min-width: 260px;">
                          <input type="hidden" name="groupId" value="<%= group.id %>">
                          <input type="hidden" name="assignees" id="assigneesInputHidden">
