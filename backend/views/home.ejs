                style="flex:1; min-height:240px; border:1px dashed var(--border-color); border-radius:6px; display:flex;align-items:center;justify-content:center;color:var(--text-muted); padding:12px;">
                Chat ch∆∞a kh·∫£ d·ª•ng
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        // Modal behavior: chat left, creator info right; attachments from task.attachments; accept/submit actions
        function openTaskDetail(task) {
          const modal = document.getElementById('taskDetailModal');
          if (!modal) return;

          // normalize task id (some APIs return _id)
          const taskId = task.id || task._id || (task._doc && (task._doc._id || task._doc.id)) || '';

          const avatarEl = document.getElementById('detailAvatar');
          const nameEl = document.getElementById('detailUserName');
          const groupEl = document.getElementById('detailGroupName');
          const taskNameEl = document.getElementById('detailTaskName');
          const descEl = document.getElementById('detailDescription');
          const startEl = document.getElementById('detailStart');
          const deadlineEl = document.getElementById('detailDeadline');
          const creatorAttachmentsEl = document.getElementById('creatorAttachments');
          const submitProductFiles = document.getElementById('submitProductFiles');
          const chatPlaceholder = document.getElementById('chatPlaceholder');
          const acceptBtn = document.getElementById('acceptTaskBtn');
          const submitBtn = document.getElementById('submitFileBtn');
          const submitInput = document.getElementById('submitFileInput');

          const userName = task.ownerName || task.owner || task.createdBy || 'Ng∆∞·ªùi t·∫°o';
          // helper to set value for inputs or textContent for other elements
          function setTextOrValue(el, text) {
            if (!el) return;
            try {
              if ('value' in el) el.value = text || '';
              else el.textContent = text || '';
            } catch (e) { el.textContent = text || ''; }
          }
          setTextOrValue(nameEl, userName);
          setTextOrValue(groupEl, task.groupName || task.group || task.teamName || '');

          if (task.ownerAvatar) {
            avatarEl.innerHTML = '';
            const img = document.createElement('img');
            img.src = task.ownerAvatar;
            img.style.cssText = 'width:100%;height:100%;border-radius:50%;object-fit:cover';
            avatarEl.appendChild(img);
          } else {
            avatarEl.textContent = (userName || '?').charAt(0).toUpperCase();
          }

          setTextOrValue(taskNameEl, task.taskName || task.name || 'T√™n c√¥ng vi·ªác');
          setTextOrValue(descEl, task.description || '');
          setTextOrValue(startEl, task.createdAt ? new Date(task.createdAt).toLocaleDateString('vi-VN') : '');
          setTextOrValue(deadlineEl, task.deadline ? new Date(task.deadline).toLocaleDateString('vi-VN') : '');

          // Fetch and render creator attachments from server
          (async () => {
            creatorAttachmentsEl.innerHTML = '<span style="font-size:0.85rem;color:var(--text-muted)">ƒêang t·∫£i file...</span>';
            try {
              const filesRes = await fetch(`/groups/${taskId}/files`, { credentials: 'same-origin' });
              const files = filesRes.ok ? await filesRes.json() : [];
              
              creatorAttachmentsEl.innerHTML = '';
              if (files.length === 0) {
                creatorAttachmentsEl.innerHTML = '<span style="font-size:0.85rem;color:var(--text-muted)">Kh√¥ng c√≥ file</span>';
              } else {
                files.forEach((f, idx) => {
                  const wrap = document.createElement('div');
                  wrap.style.cssText = 'display:flex;align-items:center;justify-content:space-between;padding:6px 8px;border:1px solid var(--border-color);border-radius:6px;background:var(--surface)';
                  const left = document.createElement('div');
                  left.style.cssText = 'flex:1;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;margin-right:8px';
                  const aLink = document.createElement('a');
                  aLink.href = f.filePath || '#';
                  aLink.textContent = f.fileName || `File ${idx+1}`;
                  aLink.target = '_blank';
                  aLink.rel = 'noopener noreferrer';
                  left.appendChild(aLink);
                  const dlBtn = document.createElement('button');
                  dlBtn.type = 'button';
                  dlBtn.textContent = 'T·∫£i';
                  dlBtn.style.cssText = 'padding:6px 8px;border-radius:6px;border:none;background:#111827;color:white;cursor:pointer';
                  dlBtn.onclick = () => {
                    // open link in new tab to trigger download
                    window.open(f.filePath || '#', '_blank');
                  };
                  wrap.appendChild(left);
                  wrap.appendChild(dlBtn);
                  creatorAttachmentsEl.appendChild(wrap);
                });
              }
            } catch (err) {
              console.error('Error fetching files:', err);
              creatorAttachmentsEl.innerHTML = '<span style="font-size:0.85rem;color:#ef4444">L·ªói khi t·∫£i file</span>';
            }
          })();

          // Clear submit product files area
          submitProductFiles.innerHTML = '';

          // chat placeholder text
          chatPlaceholder.textContent = 'Chat ch∆∞a kh·∫£ d·ª•ng';

          // Accept (Nh·∫≠n): download attachments and set personal status to in_progress
          acceptBtn.onclick = async () => {
            try {
              // Fetch files and trigger downloads
              const filesRes = await fetch(`/groups/${taskId}/files`, { credentials: 'same-origin' });
              const files = filesRes.ok ? await filesRes.json() : [];
              files.forEach(f => {
                if (f.filePath) window.open(f.filePath, '_blank');
              });
              if (CURRENT_USER_ID) await updateAssigneeStatus(taskId, CURRENT_USER_ID, 'in_progress');
              if (typeof showToast === 'function') showToast('B·∫°n ƒë√£ nh·∫≠n c√¥ng vi·ªác');
            } catch (err) {
              console.error('‚ùå acceptTask error:', err);
              alert(err.message || 'L·ªói khi nh·∫≠n c√¥ng vi·ªác');
            }
          };

          // creatorAttachBtn will scroll to attachments list
          const creatorAttachBtn = document.getElementById('creatorAttachBtn');
          if (creatorAttachBtn) creatorAttachBtn.onclick = () => {
            if (creatorAttachmentsEl) creatorAttachmentsEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
          };

          // Submit (G·ª≠i file): open file input and upload then mark completed
          submitBtn.onclick = () => submitInput.click();
          submitInput.onchange = async () => {
            const file = submitInput.files && submitInput.files[0];
            if (!file) return;
            // show uploading placeholder
            const uploading = document.createElement('div');
            uploading.textContent = `ƒêang t·∫£i l√™n ${file.name} ...`;
            submitProductFiles.appendChild(uploading);
            try {
              const fd = new FormData();
              fd.append('file', file);
              fd.append('taskId', taskId);
              if (CURRENT_USER_ID) fd.append('userId', CURRENT_USER_ID);

              // POST to server - backend endpoint must exist to accept this
              const res = await fetch(`/groups/${taskId}/submit`, { method: 'POST', body: fd, credentials: 'same-origin' });
              const data = await res.json().catch(() => ({}));
              if (!res.ok) throw new Error(data.error || 'L·ªói khi g·ª≠i file');

              // show uploaded file link if provided by server, else show name
              uploading.innerHTML = '';
              const link = document.createElement('a');
              link.textContent = (data.file && data.file.name) || file.name;
              link.href = (data.file && (data.file.url || data.file.path)) || '#';
              if (link.href !== '#') { link.target = '_blank'; link.rel = 'noopener noreferrer'; }
              uploading.appendChild(link);

              // mark assignee completed
              if (CURRENT_USER_ID) await updateAssigneeStatus(taskId, CURRENT_USER_ID, 'completed');
              if (typeof showToast === 'function') showToast('G·ª≠i file th√†nh c√¥ng');
              // clear input
              submitInput.value = '';
            } catch (err) {
              console.error('‚ùå submit file error:', err);
              uploading.remove();
              alert(err.message || 'L·ªói khi g·ª≠i file');
            }
          };

          // Confirm button: mark current user completed (final confirmation)
          const confirmBtn = document.getElementById('confirmTaskBtn');
          if (confirmBtn) {
            confirmBtn.onclick = async () => {
              try {
                if (CURRENT_USER_ID) await updateAssigneeStatus(taskId, CURRENT_USER_ID, 'completed');
                if (typeof showToast === 'function') showToast('X√°c nh·∫≠n th√†nh c√¥ng');
              } catch (err) {
                console.error('‚ùå confirmTask error:', err);
                alert(err.message || 'L·ªói khi x√°c nh·∫≠n');
              }
            };
          }

          modal.style.display = 'flex';
          modal.setAttribute('aria-hidden', 'false');
          document.getElementById('closeTaskDetailBtn').onclick = closeTaskDetail;

          modal.addEventListener('click', function onOutside(e) {
            if (e.target === modal) {
              modal.removeEventListener('click', onOutside);
              closeTaskDetail();
            }
          });

          function escHandler(e) {
            if (e.key === 'Escape') {
              document.removeEventListener('keydown', escHandler);
              closeTaskDetail();
            }
          }
          document.addEventListener('keydown', escHandler);
        }

        function closeTaskDetail() {
          const modal = document.getElementById('taskDetailModal');
          if (!modal) return;
          modal.style.display = 'none';
          modal.setAttribute('aria-hidden', 'true');
        }

        function escapeHtml(str) {
          return String(str || '').replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
        }
      </script>

