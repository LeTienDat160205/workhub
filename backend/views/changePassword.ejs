<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập & Đăng ký - WorkHub</title>
</head>

<style>
    /* Giữ nền gốc của bạn */
    body {
        background: linear-gradient(120deg, #e0e7ff 0%, #f4f6fb 100%);
        font-family: "Segoe UI", Arial, sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        overflow: hidden;
    }

    /* Ngăn tràn chiều rộng khi dùng width:100% */
    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    .auth-container {
        background: rgba(255, 255, 255, 0.98);
        padding: 48px 38px 38px 38px;
        border-radius: 28px;
        box-shadow: 0 12px 48px 0 rgba(49, 130, 206, 0.16),
            0 2px 12px rgba(49, 130, 206, 0.09);
        width: 420px;
        position: relative;
        z-index: 1;
        overflow: visible;
        animation: fadeInUp 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .logo-bar {
        display: flex;
        align-items: center;
        margin-bottom: 36px;
        gap: 18px;
        position: relative;
    }

    .logo-bar .site-name {
        font-size: 2.2rem;
        font-weight: bold;
        color: #4caf50;
        letter-spacing: 1.5px;
        text-shadow: 0 2px 12px #c7d2fe55, 0 1px 0 #fff;
        position: relative;
    }

    .logo-bar .site-name::after {
        content: "Quản lý nhóm hiệu quả";
        display: block;
        font-size: 1rem;
        color: #2e7d32;
        font-weight: 500;
        margin-top: 2px;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 4px #c7d2fe33;
    }

    h2 {
        text-align: center;
        margin-bottom: 26px;
        color: #2d3a4b;
        letter-spacing: 1px;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 18px;
    }

    .form-group label {
        display: block;
        margin-bottom: 7px;
        color: #4a5568;
        font-size: 15px;
    }

    /* Tất cả input cùng 1 kích thước, không vượt container */
    .form-group input {
        display: block;
        width: 100%;
        padding: 12px 14px;
        border: 1.5px solid #d1d5db;
        border-radius: 8px;
        font-size: 15px;
        outline: none;
        background: #f8fafc;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-group input:focus {
        border-color: #2e7d32;
        box-shadow: 0 0 0 2px #c3feda;
    }

    .form-group input.invalid {
        border-color: #ef4444;
        background: #fef2f2;
    }

    .form-group .error-msg {
        color: #ef4444;
        font-size: 13px;
        margin-top: 3px;
    }

    .auth-btn {
        width: 100%;
        padding: 13px;
        background: linear-gradient(90deg, #2e7d32 60%, #4caf50 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(49, 130, 206, 0.08);
        transition: background 0.2s, transform 0.1s;
    }

    .auth-btn:hover {
        background: linear-gradient(90deg, #4caf50 60%, #2e7d32 100%);
        transform: translateY(-2px) scale(1.01);
    }

    /* --------- Phần nút con mắt đẹp, không nền ---------- */
    .input-wrap {
        position: relative;
        width: 100%;
    }

    /* cùng bề rộng với input khác */
    input.has-toggle {
        padding-right: 44px;
    }

    /* chừa chỗ cho icon */
    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 28px;
        height: 28px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        color: #6b7280;
        line-height: 0;
        border-radius: 999px;
    }

    .toggle-password .icon {
        width: 20px;
        height: 20px;
        opacity: 0.75;
        transition: opacity 0.15s, transform 0.15s;
    }

    .toggle-password:hover .icon {
        opacity: 1;
    }

    .toggle-password:active .icon {
        transform: scale(0.96);
    }

    .toggle-password:focus-visible {
        outline: 2px solid #2e7d32;
        outline-offset: 2px;
    }

    /* Ẩn/hiện 2 trạng thái icon */
    .eye-closed {
        display: none;
    }

    .toggle-password.is-showing .eye-open {
        display: none;
    }

    .toggle-password.is-showing .eye-closed {
        display: block;
    }
    .back-link{
        color: #2e7d32;
        text-decoration: none;
        font-weight: 500;
        cursor: pointer;
    }

    .back-link:hover{
        text-decoration: underline;
    }

</style>

<body>
    <div class="auth-container">    
        <div class="logo-bar">
            <!--logo SVG -->
            <span class="site-name">WorkHub</span>
        </div>
        <form method="POST" action="/info/changePassword" autocomplete="off">
            <h2>Đổi mật khẩu</h2>
            <div class="form-group">
                <label for="currentPassword">Mật khẩu hiện tại</label>
                <div class="input-wrap">
                    <input type="password" id="currentPassword" name="currentPassword" placeholder="Nhập mật khẩu hiện tại"
                        class="has-toggle" required />
                    <!-- Nút mắt gọn, không nền -->
                    <button type="button" class="toggle-password" aria-label="Hiện mật khẩu" aria-pressed="false">
                        <!-- Eye open -->
                        <svg class="icon eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z" />
                            <circle cx="12" cy="12" r="3" />
                        </svg>
                        <!-- Eye closed -->
                        <svg class="icon eye-closed" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path
                                d="M17.94 17.94A10.94 10.94 0 0 1 12 20c-7 0-11-8-11-8a21.8 21.8 0 0 1 5.06-5.94M9.9 4.24A10.93 10.93 0 0 1 12 4c7 0 11 8 11 8a21.9 21.9 0 0 1-3.34 4.37" />
                            <path d="M1 1l22 22" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label for="newPassword">Mật khẩu mới</label>
                <div class="input-wrap">
                    <input type="password" id="newPassword" name="newPassword" placeholder="Nhập mật khẩu mới"
                        class="has-toggle" required />
                    <!-- Nút mắt gọn, không nền -->
                    <button type="button" class="toggle-password" aria-label="Hiện mật khẩu" aria-pressed="false">
                        <!-- Eye open -->
                        <svg class="icon eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z" />
                            <circle cx="12" cy="12" r="3" />
                        </svg>
                        <!-- Eye closed -->
                        <svg class="icon eye-closed" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path
                                d="M17.94 17.94A10.94 10.94 0 0 1 12 20c-7 0-11-8-11-8a21.8 21.8 0 0 1 5.06-5.94M9.9 4.24A10.93 10.93 0 0 1 12 4c7 0 11 8 11 8a21.9 21.9 0 0 1-3.34 4.37" />
                            <path d="M1 1l22 22" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <div class="input-wrap">
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Xác nhận mật khẩu mới"
                        class="has-toggle" required />
                    <!-- Nút mắt gọn, không nền -->
                    <button type="button" class="toggle-password" aria-label="Hiện mật khẩu" aria-pressed="false">
                        <!-- Eye open -->
                        <svg class="icon eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z" />
                            <circle cx="12" cy="12" r="3" />
                        </svg>
                        <!-- Eye closed -->
                        <svg class="icon eye-closed" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                            <path
                                d="M17.94 17.94A10.94 10.94 0 0 1 12 20c-7 0-11-8-11-8a21.8 21.8 0 0 1 5.06-5.94M9.9 4.24A10.93 10.93 0 0 1 12 4c7 0 11 8 11 8a21.9 21.9 0 0 1-3.34 4.37" />
                            <path d="M1 1l22 22" />
                        </svg>
                    </button>
                </div>
            </div>
            <button type="submit" class="auth-btn">Xác nhận đổi</button>
            <div style="text-align: center; margin-top: 10px;">
                <a href="/auth/login" class="back-link">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</body>

<script>
    document.querySelectorAll(".toggle-password").forEach((btn) => {
        btn.addEventListener("click", () => {
            const input = btn.parentElement.querySelector("input");
            const showing = input.type === "password";
            input.type = showing ? "text" : "password";
            btn.classList.toggle("is-showing", showing);
            btn.setAttribute("aria-pressed", showing ? "true" : "false");
            btn.setAttribute(
                "aria-label",
                showing ? "Ẩn mật khẩu" : "Hiện mật khẩu"
            );
            input.focus({ preventScroll: true });
            const val = input.value;
            input.value = "";
            input.value = val;
        });
    });
</script>

</html>