      });

      // Nh·∫•n X ho·∫∑c click ra ngo√†i ƒë·ªÉ tho√°t
      if (logoutConfirm) {
        logoutConfirm.addEventListener("click", (e) => {
          if (e.target === logoutConfirm) {
            logoutConfirm.classList.remove("active");
            logoutConfirm.setAttribute("aria-hidden", "true");
          }
