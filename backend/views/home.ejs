          // c·∫≠p nh·∫≠t tr·∫°ng th√°i
          async function loadAssignees(taskId, container) {
            if (!container) return;

            container.innerHTML = '<span style="font-size:0.75rem;color:var(--text-muted)">T·∫£i...</span>';

            try {
              const res = await fetch(`/groups/${taskId}/assignees`, { credentials: "same-origin" });
